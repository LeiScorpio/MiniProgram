<!--components/w-swiper/w-swiper.wxml-->
<swiper class="home-swiper" circular autoplay interval="2000" duration="500" indicator-dots indicator-active-color="#ff5777">
  <block wx:for="{{list}}" wx:key="index">
    <swiper-item class="swiper-item">
      <image src="{{item.image || item}}" mode="widthFix" alt="" class="swiper-img"/>
    </swiper-item>
  </block>
</swiper>
