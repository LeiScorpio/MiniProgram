<!--pages/detail/childCpns/w-comment-info/w-comment-info.wxml-->
<view class='comment-info'>
  <view class='header'>
    <view>用户评价</view>
    <view>更多 >></view>
  </view>
  <view class='user'>
    <image src="{{commentInfo.user.avatar}}" class="user-image"/>
    <text class="user-text">{{commentInfo.user.uname}}</text>
  </view>
  <view class='comment'>
    {{commentInfo.content}}
  </view>
  <view class='other-info'>
    <view class='time'>{{commentInfo.created}}</view>
    <view class='style'>{{commentInfo.style}}</view>
  </view>
  <view class='picture'>
    <block wx:for="{{commentInfo.images}}" 
           wx:key="index">
      <image src="{{item}}" mode="widthFix" class="comment-image"/>
    </block>
  </view>
</view>

